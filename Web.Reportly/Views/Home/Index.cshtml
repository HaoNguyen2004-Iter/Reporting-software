@{
    ViewData["Title"] = "Dashboard";
}

<!-- Quick Actions -->
<div class="row g-4 mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-bolt me-2"></i>Thao tác nhanh</h5>
            </div>
            <div class="card-body">
                <div class="quick-actions">
                    <a asp-controller="Report" asp-action="Write" class="quick-action-btn">
                        <i class="fas fa-plus-circle"></i>
                        <span>Tạo báo cáo mới</span>
                    </a>
                    <button class="quick-action-btn" onclick="alert('Chức năng đang phát triển')">
                        <i class="fas fa-download"></i>
                        <span>Tải mẫu báo cáo</span>
                    </button>
                    <button class="quick-action-btn" onclick="alert('Chức năng đang phát triển')">
                        <i class="fas fa-file-export"></i>
                        <span>Xuất báo cáo</span>
                    </button>
                    <button class="quick-action-btn" onclick="alert('Chức năng đang phát triển')">
                        <i class="fas fa-calendar-alt"></i>
                        <span>Lịch báo cáo</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Reports & Notifications -->
<div class="row g-4">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-history me-2"></i>Báo cáo gần đây</h5>
                <a href="#" class="btn btn-sm btn-outline-primary">Xem tất cả</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Tiêu đề</th>
                                <th>Tuần</th>
                                <th>Trạng thái</th>
                                <th>Ngày gửi</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><i class="fas fa-file-alt text-primary me-2"></i>Báo cáo tuần 44</td>
                                <td>Tuần 44 (28/10 - 03/11)</td>
                                <td><span class="badge bg-success">Đã duyệt</span></td>
                                <td>03/11/2025</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></button>
                                    <button class="btn btn-sm btn-outline-secondary"><i class="fas fa-download"></i></button>
                                </td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-file-alt text-primary me-2"></i>Báo cáo tuần 43</td>
                                <td>Tuần 43 (21/10 - 27/10)</td>
                                <td><span class="badge bg-warning">Chờ duyệt</span></td>
                                <td>27/10/2025</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></button>
                                    <button class="btn btn-sm btn-outline-secondary"><i class="fas fa-edit"></i></button>
                                </td>
                            </tr>
                            <tr>
                                <td><i class="fas fa-file-alt text-primary me-2"></i>Báo cáo tuần 42</td>
                                <td>Tuần 42 (14/10 - 20/10)</td>
                                <td><span class="badge bg-success">Đã duyệt</span></td>
                                <td>20/10/2025</td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></button>
                                    <button class="btn btn-sm btn-outline-secondary"><i class="fas fa-download"></i></button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="fas fa-bell me-2"></i>Thông báo</h5>
            </div>
            <div class="card-body">
                <div class="notification-item">
                    <div class="notification-icon bg-primary">
                        <i class="fas fa-info-circle"></i>
                    </div>
                    <div class="notification-content">
                        <h6>Hạn nộp báo cáo tuần</h6>
                        <p>Hạn nộp: Thứ 2 hàng tuần trước 17h</p>
                        <small class="text-muted">Hôm nay</small>
                    </div>
                </div>
                
                <div class="notification-item">
                    <div class="notification-icon bg-success">
                        <i class="fas fa-check"></i>
                    </div>
                    <div class="notification-content">
                        <h6>Báo cáo đã được duyệt</h6>
                        <p>Báo cáo tuần 44 đã được phê duyệt</p>
                        <small class="text-muted">2 giờ trước</small>
                    </div>
                </div>
                
                <div class="notification-item">
                    <div class="notification-icon bg-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="notification-content">
                        <h6>Nhắc nhở</h6>
                        <p>Bạn có 1 báo cáo chưa hoàn thành</p>
                        <small class="text-muted">1 ngày trước</small>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-life-ring me-2"></i>Hỗ trợ</h5>
            </div>
            <div class="card-body">
                <div class="support-info">
                    <div class="support-item">
                        <i class="fas fa-envelope"></i>
                        <span>it@company.local</span>
                    </div>
                    <div class="support-item">
                        <i class="fas fa-phone"></i>
                        <span>(024) 1234 5678</span>
                    </div>
                    <div class="support-item">
                        <i class="fas fa-clock"></i>
                        <span>8:00 - 17:30 (T2-T6)</span>
                    </div>
                </div>
                <button class="btn btn-primary w-100 mt-3">
                    <i class="fas fa-question-circle me-2"></i>Trợ giúp
                </button>
            </div>
        </div>
    </div>
</div>
