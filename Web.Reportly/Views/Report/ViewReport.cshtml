@model DBContext.Reportly.Entities.Upload
@{
    ViewData["Title"] = "Xác thực báo cáo";
    bool isPublic = ViewData["IsPublicView"] as bool? ?? false;
    Layout = isPublic ? "_LayoutPublic" : "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-lg overflow-hidden" style="border-top: 5px solid #4e73df !important;">
                <div class="card-body p-5 text-center">
                    
                    <div class="mb-4">
                         @if (Model.Status == 1) { /* ... */ <h4 class="mt-3 text-success fw-bold">Báo cáo</h4> }
                         else { /* ... */ <h4 class="mt-3 text-warning fw-bold">Đang xử lý</h4> }
                    
                    </div>

                    <hr class="my-4 opacity-10">

                    <div class="row g-4 text-start justify-content-center">
                        <div class="col-sm-6">
                            <div class="p-3 bg-light rounded-3 h-100 border">
                                <small class="text-uppercase text-muted fw-bold" style="font-size: 11px; letter-spacing: 1px;">Mã tài liệu (REF ID)</small>
                                <div class="d-flex align-items-center mt-2">
                                    <i class="fas fa-fingerprint text-primary me-3 fs-4"></i>
                                    <div>
                                        <h5 class="mb-0 fw-bold">@Model.ViewToken.ToString().Substring(0, 8).ToUpper()</h5>
                                        <small class="text-muted">ID nội bộ: #@Model.Id</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="p-3 bg-light rounded-3 h-100 border">
                                <small class="text-uppercase text-muted fw-bold" style="font-size: 11px; letter-spacing: 1px;">Thời gian tạo</small>
                                <div class="d-flex align-items-center mt-2">
                                    <i class="fas fa-calendar-alt text-primary me-3 fs-4"></i>
                                    <div>
                                        <h5 class="mb-0 fw-bold">@Model.CreatedAt.ToString("dd/MM/yyyy")</h5>
                                        <small class="text-muted">Lúc @Model.CreatedAt.ToString("HH:mm:ss")</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="p-3 rounded-3 border" style="background: #f8f9fc;">
                                <small class="text-uppercase text-muted fw-bold" style="font-size: 11px; letter-spacing: 1px;">Người tạo báo cáo</small>
                                <div class="row mt-3">
                                    <div class="col-md-6 mb-3 mb-md-0">
                                        <div class="d-flex align-items-center">
                                            <div style="width: 45px; height: 45px; background: #e8eaf6; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 15px;">
                                                <i class="fas fa-user text-indigo" style="color: #3f51b5; font-size: 20px;"></i>
                                            </div>
                                            <div>
                                                <small class="text-muted d-block">Họ và tên</small>
                                                <span class="fw-bold text-dark">@(Model.CreatorFullName ?? "N/A")</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="d-flex align-items-center">
                                            <div style="width: 45px; height: 45px; background: #e8f5e9; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 15px;">
                                                <i class="fas fa-building text-success" style="font-size: 20px;"></i>
                                            </div>
                                            <div>
                                                <small class="text-muted d-block">Bộ phận / Phòng ban</small>
                                                <span class="fw-bold text-dark">@(Model.CreatorDepartment ?? "N/A")</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="p-3 bg-light rounded-3 border">
                                <small class="text-uppercase text-muted fw-bold" style="font-size: 11px; letter-spacing: 1px;">Tệp đính kèm</small>
                                <div class="d-flex align-items-center mt-2">
                                    <i class="fas fa-file-pdf text-danger me-3 fs-2"></i>
                                    <div class="text-truncate">
                                        <h6 class="mb-1 fw-bold text-dark text-truncate">@Model.FileName</h6>
                                        <span class="badge bg-secondary">@Model.FileSizeKB KB</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-5 d-grid gap-3 d-sm-flex justify-content-sm-center">
                        <a href="@Model.FilePath" target="_blank" class="btn btn-primary btn-lg px-5 py-3 fw-bold rounded-pill shadow-sm hover-lift">
                            <i class="fas fa-eye me-2"></i>XEM TÀI LIỆU GỐC
                        </a>
                        @if (!isPublic) { /* Nút Gửi báo cáo (giữ nguyên) */ }
                    </div>

                </div>
                <div class="card-footer bg-light py-3 text-center">
                    <small class="text-muted fw-medium">Được bảo mật và xác thực bởi <strong>Reportly System</strong></small>
                </div>
            </div>
            </div>
    </div>
</div>