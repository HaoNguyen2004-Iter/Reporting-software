@model IEnumerable<DBContext.Reportly.Entities.Email>
@{
    ViewData["Title"] = "Báo cáo đã nộp";
}

<div class="card">
    <div class="card-header">
        <h5><i class="fas fa-history me-2"></i>Danh sách báo cáo đã gửi</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th style="width: 5%;">STT</th>
                        <th style="width: 30%;">Tiêu đề (Subject)</th>
                        <th style="width: 20%;">Người nhận (To)</th>
                        <th style="width: 15%;">Ngày gửi</th>
                        <th style="width: 10%;">Trạng thái</th>
                        <th style="width: 20%;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-5">
                                <i class="fas fa-box-open fa-2x mb-3"></i>
                                <p>Chưa có báo cáo nào được gửi.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        int stt = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@(stt++)</td>
                                <td>@item.Subject</td>
                                <td class="text-muted">@item.ToEmail</td>
                                <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (item.Status == 1)
                                    {
                                        <span class="badge bg-success-soft text-success">
                                            <i class="fas fa-check-circle me-1"></i>Thành công
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger-soft text-danger">
                                            <i class="fas fa-times-circle me-1"></i>Thất bại
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (item.Upload != null)
                                    {
                                        <a href="@item.Upload.FilePath" class="btn btn-sm btn-outline-primary" download>
                                            <i class="fas fa-download me-1"></i>Tải về PDF
                                        </a>
                                    }
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                        <i class="fas fa-eye"></i> Xem
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>