@model DBContext.Reportly.Entities.Email
@{
    ViewData["Title"] = "Chi tiết báo cáo";
}

<div classs="row">
    <div class="col-lg-10 mx-auto">
        
        <div class="mb-3">
            <a asp-action="History" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> Quay lại Lịch sử
            </a>
        </div>

        <div class="card">
            <div class="card-header bg-light">
                <h4 class="mb-0">@(Model.Subject)</h4>
                <p class="mb-0 text-muted">
                    Gửi lúc: @Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")
                </p>
            </div>
            <div class="card-body">
                
                <!--Hiển thị thông tin Người gửi và Phòng ban -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <strong>Người gửi:</strong>
                        <p>@Model.SenderName</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Phòng ban:</strong>
                        <p>@Model.SenderDepartment</p>
                    </div>
                    <div class="col-md-6">
                        <strong>Đến (To):</strong>
                        <p>@Model.ToEmail</p>
                    </div>
                    <div class="col-md-6">
                        <strong>CC:</strong>
                        <p>@(Model.CCEmail ?? "Không có")</p>
                    </div>
                </div>

                <hr class="my-4">

                <!-- File đính kèm -->
                <div class="mb-4">
                    <h5 class="mb-3">File đính kèm</h5>
                    <a href="@Model.FilePath" 
                       class="btn btn-primary" 
                       download="@Model.OriginalFileName">
                        <i class="fas fa-download me-2"></i> Tải về: @(Model.OriginalFileName ?? System.IO.Path.GetFileName(Model.FilePath))
                    </a>
                </div>

                <hr class="my-4">

                <!-- Nội dung Email -->
                <div>
                    <h5 class="mb-3">Nội dung báo cáo đã gửi</h5>
                    <div class="email-content p-3 bg-light rounded" style="border: 1px solid #e9ecef;">
                        @Html.Raw(Model.Content)
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>