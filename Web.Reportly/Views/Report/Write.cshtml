@{
    ViewData["Title"] = "Viết báo cáo";
}

@section Styles {
    <!-- CKEditor CSS -->
    <style>
        .ck-editor__editable {
            min-height: 300px;
        }
    </style>
}

<div class="row">
    <div class="col-lg-9">
        <!-- Report Form Card -->
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-edit me-2"></i>Viết báo cáo tuần</h5>
            </div>
            <div class="card-body">
                <form id="reportForm">
                    <div class="row mb-3">
                        <div>
                            <div id="editor">
                                <p><strong>Kính gửi anh/chị,</strong></p>
                                <p>Em xin gửi báo cáo tuần phòng ban.</p>
                                <p><strong>1. Công việc đã hoàn thành:</strong></p>
                                <ul>
                                    <li>Nội dung công việc 1</li>
                                    <li>Nội dung công việc 2</li>
                                </ul>
                                <p><strong>2. Công việc đang thực hiện:</strong></p>
                                <ul>
                                    <li>Nội dung công việc 1</li>
                                    <li>Nội dung công việc 2</li>
                                </ul>
                                <p><strong>3. Kế hoạch tuần tới:</strong></p>
                                <ul>
                                    <li>Nội dung kế hoạch 1</li>
                                    <li>Nội dung kế hoạch 2</li>
                                </ul>
                                <p><strong>4. Vấn đề cần hỗ trợ:</strong></p>
                                <p>Không có.</p>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row">
                        <div>
                            <div class="d-flex gap-2 flex-wrap">
                                <button type="button" id="createReport" class="btn btn-success">
                                    <i class="fas fa-file-pdf me-1"></i>Tạo báo cáo
                                </button>
                                <button type="button" id="saveDraftBtn" class="btn btn-outline-info">
                                    <i class="fas fa-save me-1"></i>Lưu nháp
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- QR Code Preview Card -->
        <div class="card mt-4" id="qrPreviewCard" style="display: none;">
            <div class="card-header">
                <h5><i class="fas fa-qrcode me-2"></i>Mã QR Code</h5>
            </div>
            <div class="card-body text-center">
                <div id="qrCodeDisplay" class="d-inline-block p-3 bg-white border rounded"></div>
                <p class="mt-3 text-muted">Mã QR chứa thông tin báo cáo để xác thực</p>
            </div>
        </div>
    </div>

    <!-- Sidebar Info -->
    <div class="col-lg-3">
        <div class="card mb-4">
            <div class="card-header">
                <h5><i class="fas fa-info-circle me-2"></i>Hướng dẫn</h5>
            </div>
            <div class="card-body">
                <div class="guide-item">
                    <div class="guide-number">1</div>
                    <div class="guide-content">
                        <h6>Điền thông tin</h6>
                        <p>Điền đầy đủ thông tin bộ phận, tuần báo cáo và người nhận</p>
                    </div>
                </div>
                
                <div class="guide-item">
                    <div class="guide-number">2</div>
                    <div class="guide-content">
                        <h6>Viết nội dung</h6>
                        <p>Soạn nội dung báo cáo chi tiết và rõ ràng</p>
                    </div>
                </div>
                
                <div class="guide-item">
                    <div class="guide-number">3</div>
                    <div class="guide-content">
                        <h6>Tạo QR Code</h6>
                        <p>Tạo mã QR để xác thực báo cáo</p>
                    </div>
                </div>
                
                <div class="guide-item">
                    <div class="guide-number">4</div>
                    <div class="guide-content">
                        <h6>Xuất PDF</h6>
                        <p>Xuất báo cáo kèm QR code thành file PDF</p>
                    </div>
                </div>
                
                <div class="guide-item">
                    <div class="guide-number">5</div>
                    <div class="guide-content">
                        <h6>Gửi báo cáo</h6>
                        <p>Gửi báo cáo qua email cho người quản lý</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-lightbulb me-2"></i>Lưu ý</h5>
            </div>
            <div class="card-body">
                <ul class="note-list">
                    <li><i class="fas fa-check-circle text-success"></i> Nộp báo cáo trước thứ 2 hàng tuần</li>
                    <li><i class="fas fa-check-circle text-success"></i> Đảm bảo nội dung đầy đủ và chính xác</li>
                    <li><i class="fas fa-check-circle text-success"></i> Đính kèm file nếu cần thiết</li>
                    <li><i class="fas fa-check-circle text-success"></i> Kiểm tra email người nhận</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Hidden area for PDF generation -->
<div id="pdfArea" style="display: none; width: 800px; padding: 40px; background: #fff;">
    <div style="text-align: center; margin-bottom: 30px;">
        <h2 id="pdfTitle" style="color: #2c3e50; margin-bottom: 10px;">Báo cáo tuần</h2>
        <p id="pdfWeek" style="color: #7f8c8d; font-size: 14px;"></p>
    </div>
    
    <div id="pdfContent" style="margin-bottom: 30px; line-height: 1.8;"></div>
    
    <div id="pdfAttachments" style="margin-bottom: 20px; padding: 15px; background: #f8f9fa; border-radius: 5px;"></div>
    
    <div style="text-align: center; margin-top: 30px; padding-top: 20px; border-top: 2px solid #e9ecef;">
        <p style="margin-bottom: 15px; color: #7f8c8d; font-size: 13px;">Mã QR xác thực báo cáo</p>
        <div id="pdfQr" style="display: inline-block;"></div>
        <p style="margin-top: 10px; color: #95a5a6; font-size: 11px;">Quét mã QR để xác thực thông tin báo cáo</p>
    </div>
</div>

@section Scripts {
    <!-- CKEditor 5 -->
    <script src="https://cdn.ckeditor.com/ckeditor5/40.1.0/classic/ckeditor.js"></script>
    <!-- QR Code Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <!-- html2canvas & jsPDF -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    
    <script src="~/assets/js/report.js"></script>
}
